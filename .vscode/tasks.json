{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "cmake --build ${workspaceFolder}/build --config Debug",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "flash",
      "command": "st-flash",
      "args": ["write", "${workspaceFolderBasename}.bin", "0x8000000"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "dependsOn": "build",
      "problemMatcher": []
    }
  ]
}
